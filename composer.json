{
  "description": "Simple cron app",
  "require": {
    "php": "^8.3",
    "ext-pdo": "*",
    "ext-json": "*",
    "vlucas/phpdotenv": "^5.6",
    "ext-curl": "*",
    "nesbot/carbon": "^3.10",
    "guzzlehttp/guzzle": "^7.9",
    "promphp/prometheus_client_php": "^2.9",
    "nikic/fast-route": "^1.3",
    "psr/container": "^2.0",
    "monolog/monolog": "^3.9",
    "ext-sockets": "*",
    "sergeytsalkov/meekrodb": "^3.1",
    "predis/predis": "^3.2",
    "ext-zlib": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "echo 'Run: php ../../../Library/Application Support/JetBrains/PhpStorm2024.3/scratches/server.php to start a worker instance'",
      "echo 'Run: php exec/syncbethistory.php run to start the dispatcher'"
    ]
  }
}
